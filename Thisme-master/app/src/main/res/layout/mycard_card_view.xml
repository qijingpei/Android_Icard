<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/card_background01">

        <TextView
            android:text="名字"
            android:textColor="@color/black_de"
            android:textSize="30sp"
            android:id="@+id/mycard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/mycard_name"
            android:text="18363999932"
            android:textColor="@color/black_de"
            android:textSize="24sp"
            android:id="@+id/mycard_miaosu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mycard_miaosu"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <Button
                android:background="@drawable/ic_share_red_400_18dp"
                android:id="@+id/mycard_share"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/mycard_edit"
                android:background="@drawable/ic_border_color_red_400_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/mycard_delete"
                android:background="@drawable/ic_delete_red_400_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>
</RelativeLayout>

</android.support.v7.widget.CardView>
