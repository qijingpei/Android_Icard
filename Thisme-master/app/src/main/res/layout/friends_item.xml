<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/light_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_de">

        <TextView
            android:text="名字"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:id="@+id/mycard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/mycard_name"
            android:text="手机号"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/friend_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout">

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/call"
                android:background="@drawable/ic_call_green_700_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/message"
                android:background="@drawable/ic_message_green_700_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_phone_num"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/mycard_edit"
                android:background="@drawable/ic_border_color_red_400_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/mycard_delete"
                android:background="@drawable/ic_delete_red_400_18dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
